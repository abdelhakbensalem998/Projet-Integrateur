@{
    ViewData["Title"] = "Professeur Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-chalkboard-teacher text-primary me-2"></i>
                Mes Cours - Semaine
            </h1>
            <div>
                <span class="badge bg-primary fs-6 px-3 py-2">
                    <i class="fas fa-user-graduate me-1"></i>@ViewBag.UserRole
                </span>
                <span class="ms-2">Bonjour, @ViewBag.UserNom</span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Horaires de la semaine</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Jour</th>
                                <th>Cours</th>
                                <th>Salle</th>
                                <th>Heure</th>
                                <th>Étudiants</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Lundi</td>
                                <td>Mathématiques 101</td>
                                <td>A-201</td>
                                <td>09:00-11:00</td>
                                <td>28</td>
                                <td>
                                    <span class="badge bg-success">Présent</span>
                                </td>
                            </tr>
                            <tr class="table-warning">
                                <td>Mercredi</td>
                                <td>Algèbre Linéaire</td>
                                <td>B-105</td>
                                <td>14:00-16:00</td>
                                <td>25</td>
                                <td>
                                    <span class="badge bg-warning">À venir</span>
                                </td>
                            </tr>
                            <tr>
                                <td>Vendredi</td>
                                <td>Statistiques</td>
                                <td>A-303</td>
                                <td>10:00-12:00</td>
                                <td>30</td>
                                <td>
                                    <span class="badge bg-info">À venir</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-3">
        <a href="#" class="btn btn-primary btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center">
            <i class="fas fa-calendar-plus fa-2x mb-2"></i>
            <div>Nouveau cours</div>
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a href="#" class="btn btn-success btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center">
            <i class="fas fa-list fa-2x mb-2"></i>
            <div>Notes</div>
        </a>
    </div>
    <div class="col-md-4 mb-3">
        <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-danger btn-lg w-100 h-100 d-flex flex-column align-items-center justify-content-center">
            <i class="fas fa-sign-out-alt fa-2x mb-2"></i>
            <div>Déconnexion</div>
        </a>
    </div>
</div>


